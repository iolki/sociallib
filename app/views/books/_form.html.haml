-#
  = form_for(@book) do |f|
    - if @book.errors.any?
      #error_explanation
        %h2
          = pluralize(@book.errors.count, "error")
          prohibited this book from being saved:
  
        %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg
  
    .field
      = f.label :title
      %br
      = f.text_field :title
  
    .actions
      = f.submit

= form_tag :action => 'create'
%input{ :type => 'text', :name => 'isbn13' }
%input{:type => 'submit' }